<div class="row mt-5">
    <div class="col-4"></div>
    <div class="col-4 text-center p-3" style="background-color: yellow;">

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="burgerName" name="name" class="form-control">
            </div>

            <div class="form-group">
                <dive class="row">
                    <div class="col-6 text-center"><input type="radio" name="devoured" value="0" checked>Pending!</div>
                    <div class="col-6 text-center"><input type="radio" name="devoured" value="1">Devoured!</div>
                </dive>
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>

    </div>
    <div class="col-4"></div>
</div>


<div class="row mt-4">
    <div class="col display-1 text-center" class="background-color: lightblue;">Burgers!</div>
</div>

<div class="row">
    <div class="col-6 display-4 text-center">Pending Burgers</div>
    <div class="col-6 display-4 text-center">Devoured Burgers</div>
</div>

<div class="row">
    <div class="col-6">


        <ul style="line-height: 30px;" class="bg-dark text-white">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6">


        <ul style="line-height: 30px;" class="bg-dark text-white">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>